<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if flash[:notice] %>
    	<div><%= flash[:notice] %></div>
	<% end %>

  <% if flash[:success] %>
      <div><%= flash[:success] %></div>
  <% end %>

  <% if flash[:alert] %>
      <div><%= flash[:alert] %></div>
  <% end %>

	
	<%= render 'layouts/shared/nav' %>
	
    <div class="container">
        <%= yield %>
    </div>

</body>
</html>